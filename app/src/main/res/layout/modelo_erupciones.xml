<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:background="@color/blanco"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="73dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="horizontal"
        android:background="@drawable/linearbackground">
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:minHeight="50dp"
            android:id="@+id/anno"
            android:layout_centerVertical="true">
            <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tablas_detalles"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:text="nombre"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/anno"
            android:layout_centerVertical="true"
            android:layout_height="50dp"
            android:minHeight="50dp">
            <TextView
                android:id="@+id/tipo_actividad"
                style="@style/tablas_detalles"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_below="@+id/tipo_actividad"
                style="@style/tablas_detalles2"
                android:id="@+id/fuente"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>